{% extends 'base_admin.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

<div class="container p-5">
    <div class="row">

        <h1 class="text-white">User {{user.firstname}}</h1>

        <table class="table text-white">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>

                <tr>
                    <th>First Name</th>
                    <td>{{ user.firstname }}</td>
                </tr>

                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>

                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            </tbody>
        </table>

        <p><a href="{{ path('users_edit', {'id': user.id}) }}" class="btn btn-primary">edit</a></p>


        <a href="{{ path('users_index') }}">back to list</a>

        {{ include('admin/users/_delete_form.html.twig') }}

    </div>
</div>
{% endblock %}
